{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,

    // Path Alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
